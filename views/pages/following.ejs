<!DOCTYPE html>
<html>
  <head>
    <%- include("../partials/meta") %>
  </head>

  <body>
    <div class="container-fluid d-flex justify-content-evenly">
      <div class="row">
        <div class="col-3 col-sm-3 col-md-2"><%- include("../partials/sidebar") %></div>
        <div class="p-3 min-vh-100 col-sm-9 col-9 col-md-6 mb-2">
          <div class="row text-center mb-4">
            <div class="col-6">
              <a
                href="/usuarios/followers/<%= profileUser.username %>"
                class="fs-5 text-muted text-decoration-none"
                >Followers</a
              >
            </div>
            <div class="col-6">
              <a
                href="/usuarios/following/<%= profileUser.username %>"
                class="fs-5 text-muted text-decoration-none celeste"
                >Following</a
              >
            </div>
          </div>

          <% for(const follower of following ){ %>

          <div class="row mb-3">
            <div class="col-3 text-center">
              <img
                style="max-width: 50px"
                class="rounded-circle img-fluid w-100"
                src="<%= follower.avatar%>"
                alt="Profile image"
              />
            </div>
            <div class="col-6 p-0">
              <p class="mb-0"><strong> <%= follower.firstname%> <%= follower.lastname%></strong></p>
              <small class="text-muted"><%= follower.username%></small>
            </div>
            <div class="col-3 p-0">
              <% if(user.following.includes(user.id)){ %>
              <button type="button" class="btn btn-light rounded-pill mr-2">Unfollow</button>
              <% }else{ %>
              <button type="button" class="btn btn-primary rounded-pill mr-2">Follow</button>
              <% } %>
            </div>
          </div>
          <% } %>
        </div>

        <div class="col-md-4 hidden-sm"><%- include("../partials/rightSidebar") %></div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script src="https://kit.fontawesome.com/9f0d5f7751.js" crossorigin="anonymous"></script>
  </body>
</html>
